<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/IvInstaPreview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_insta_prev_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/IvInstaPreview2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@+id/IvInstaPreview1"
        app:srcCompat="@drawable/ic_insta_prev_2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/IvInstaPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:src="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/IvInstaPreview2"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/IvInstaPreview1"
        app:layout_constraintVertical_bias="0.491"
        app:layout_constraintWidth_percent="0.2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/IvInstagramBorder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/IvInstaPreview"
        app:layout_constraintEnd_toEndOf="@+id/IvInstaPreview"
        app:layout_constraintStart_toStartOf="@+id/IvInstaPreview"
        app:layout_constraintTop_toTopOf="@+id/IvInstaPreview" />
</androidx.constraintlayout.widget.ConstraintLayout>